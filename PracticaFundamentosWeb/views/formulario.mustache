     <section class="formulario">
      <div class="container">
         
          <p></p>
          <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0" class="titulo" >Plato</h2>
          <p></p>
          
          <div>
              <form action="/guardarPlato" method="post">
                     <div class="form-floating mb-3">
                          <input class="form-control" id="nombre" placeholder=" " type='text' name='nombre' value="{{ datos.nombre }}">
                          <label>Nombre del plato</label>
                      </div>
             
                      <div class="form-floating mb-3">
                          <input class="form-control" id="nombre" placeholder=" " type='text' name='descripcion' value="{{ datos.descripcion }}">
                          <label>Descripcion</label>
                       </div>
                     
                      <div class="form-floating mb-3">
                          <input class="form-control" id="precio" placeholder=" " type='number' name='precio' value="{{ datos.precio }}"/>
                          <label>Precio</label>
                      </div>

                      
                      <div class="form-floating mb-3">
                          <input class="form-control" id="valoracion" placeholder=" " min="0" max="10" type='number' name='valoracion' value="{{ datos.valoracion }}"/>
                          <label>Valoracion</label>
                      </div>

                      
                      <div id="ingredientes-container" class="form-floating mb-3">

                      </div>

                     <div id="addIngrediente">
						<button class="btn btn-secondary" onclick="addCuadroIngredienteFormulario()" type="button" id="aIngre">Añadir ingrediente</button>
                     </div>
                      <p></p>
                      <p></p>
                     <div class="mb-3" id="Imag">
                        <h4><p>Imagen</p></h4>
                        <input class="form-control" id="imagen" placeholder=" " type='text' name='imagen' value="{{ datos.imagen }}">
                        <input id="imgenerico" type="file" data-sb-validations="required" onclick="quitarRuta()"/>
                     </div>

                     <input type="hidden" name="nombreVista" value="{{ nombreVista }}">

                      <div id="guardado">
						<div id="guardar"><input type='submit' value='Guardar plato'></div>
						<p></p>
						<button class="btn btn-secondary" onclick="location.href='/nuestraCarta'" type="button">Cancelar</button>
                      </div>
              </form>
          </div>
      </div>
  </section>

